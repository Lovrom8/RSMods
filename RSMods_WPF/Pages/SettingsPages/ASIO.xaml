                    <Viewbox Width="55" Height="72">
                        <Canvas Width="29" Height="29">
                            <Path Fill="White" Data="M17.65,6.35C16.2,4.9 14.21,4 12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20C15.73,20 18.84,17.45 19.73,14H17.65C16.83,16.33 14.61,18 12,18A6,6 0 0,1 6,12A6,6 0 0,1 12,6C13.66,6 15.14,6.69 16.22,7.78L13,11H20V4L17.65,6.35Z" Height="12" Stretch="Fill" Width="12" />
                        </Canvas>
                    </Viewbox>
                </Button>
            </Grid>
        </GroupBox>
        <GroupBox Header="Output" Margin="0,238,422,0" BorderThickness="0">
            <Grid>
                <ListBox Name="Output_Devices"  Margin="0,0,50,80" d:ItemsSource="{d:SampleData ItemCount=4}" SelectionChanged="SelectedAsioDevice" HorizontalAlignment="Left">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem"/>
                    </ListBox.ItemContainerStyle>
                </ListBox>
                <CheckBox Name="Output_Disabled" Content="Disabled" HorizontalAlignment="Left" Margin="0,135,0,0" VerticalAlignment="Top" Checked="CheckStateChanged" Unchecked="CheckStateChanged"/>
                <Label Content="Base Channel:" HorizontalAlignment="Left" Margin="198,80,0,0" VerticalAlignment="Top"/>
                <xctk:IntegerUpDown Name="Output_BaseChannel" HorizontalAlignment="Left" Margin="279,80,0,0" VerticalAlignment="Top" Height="22" Width="71" Minimum="0" Maximum="100" ValueChanged="ChannelChanged"/>
                <Label Content="Alt Base Channel:" HorizontalAlignment="Left" Margin="180,102,0,0" VerticalAlignment="Top"/>
                <xctk:IntegerUpDown Name="Output_AltBaseChannel" HorizontalAlignment="Left" Margin="279,105,0,0" VerticalAlignment="Top" Height="22" Width="71" Minimum="0" Maximum="100" ValueChanged="ChannelChanged"/>
                <CheckBox Name="Output_EnableEndpointVolume" Content="Endpoint Volume" HorizontalAlignment="Left" Margin="0,95,0,0" VerticalAlignment="Top" Checked="CheckStateChanged" Unchecked="CheckStateChanged"/>
                <CheckBox Name="Output_EnableMasterVolume" Content="Master Volume" HorizontalAlignment="Left" Margin="0,115,0,0" VerticalAlignment="Top" Checked="CheckStateChanged" Unchecked="CheckStateChanged"/>
                <Label Name="Output_MasterVolumeLabel" Content="Volume:" HorizontalAlignment="Left" Margin="228,130,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.417,0.48"/>
