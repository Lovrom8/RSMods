                    <Viewbox Width="55" Height="72">
                        <Canvas Width="29" Height="29">
                            <Path Fill="White" Data="M17.65,6.35C16.2,4.9 14.21,4 12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20C15.73,20 18.84,17.45 19.73,14H17.65C16.83,16.33 14.61,18 12,18A6,6 0 0,1 6,12A6,6 0 0,1 12,6C13.66,6 15.14,6.69 16.22,7.78L13,11H20V4L17.65,6.35Z" Height="12" Stretch="Fill" Width="12" />
                        </Canvas>
                    </Viewbox>
                </Button>
            </Grid>
        </GroupBox>
        <GroupBox Header="Buffer Settings" Margin="378,238,214,0" BorderThickness="0">
            <Grid>
                <RadioButton Name="BufferSizeDriver" Content="Driver" VerticalAlignment="Top" Checked="RadioStateChanged"/>
                <RadioButton Name="BufferSizeHost" Content="Host" Margin="0,20,0,0" VerticalAlignment="Top" Checked="RadioStateChanged"/>
                <RadioButton Name="BufferSizeCustom" Content="Custom" Margin="0,40,0,0" VerticalAlignment="Top" Checked="RadioStateChanged"/>
                <xctk:IntegerUpDown Name="CustomBufferSize" HorizontalAlignment="Left" Margin="111,98,0,0" VerticalAlignment="Top" Height="22" Width="71" Minimum="0" Maximum="1024" Increment="16" ValueChanged="CustomBufferSizeChanged"/>
                <Label Name="Label_CustomBufferSize" Content="Custom Buffer Size:" HorizontalAlignment="Left" Margin="0,97,0,0" VerticalAlignment="Top"/>
            </Grid>
        </GroupBox>
        <GroupBox Header="Config Settings" Margin="586,238,0,0" BorderThickness="0">
            <Grid>
                <CheckBox Name="WASAPI_Output" Content="Use WASAPI Output" VerticalAlignment="Top" Checked="CheckStateChanged" Unchecked="CheckStateChanged"/>
                <CheckBox Name="WASAPI_Input" Content="Use WASAPI Input" VerticalAlignment="Top" Margin="0,20,0,0" Checked="CheckStateChanged" Unchecked="CheckStateChanged"/>
                <CheckBox Name="UseAsio" Content="Use ASIO" VerticalAlignment="Top" Margin="0,40,0,0" Checked="CheckStateChanged" Unchecked="CheckStateChanged"/>
            </Grid>
        </GroupBox>
    </Grid>
</settingsPages:SettingsPage>
